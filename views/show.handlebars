<h1 class="mb-1 restaurant-show-title">{{restaurantList.name}}</h1>
<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別:
        </span>
        {{restaurantList.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantList.location}}
        <a href="{{restaurantList.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantList.phone}}
      </p>
      <p class="mb-5">
        {{restaurantList.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurantList.image}}" alt="{{restaurantList.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>